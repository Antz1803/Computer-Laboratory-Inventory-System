@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var loggedInUser = HttpContextAccessor.HttpContext.Session.GetString("FullName") ?? "Guest";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DNTS_ACLIRTS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DNTS_CLIS.styles.css" asp-append-version="true" />
    <style>
        html, body {
            background-color: #a3cef1;
            height: 100%;
        }

        /* Sidebar Styles */
        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #027bce;
            padding-top: 20px;
            z-index: 1000;
            display: flex;
            flex-direction: column;
        }

            .sidebar a {
                padding: 8px 16px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #555;
                }

            .sidebar .user-info {
                color: #fdc500;
                font-size: 16px;
                margin-top: auto;
                padding-left: 16px;
            }

            /* Logout Link */
            .sidebar .logout-link {
                margin-top: auto; 
                padding: 16px;
                background-color: #027bce;
                color: white;
                text-decoration: none;
                font-size: 16px;
                text-align: center;
                transition: background-color 0.3s;
            }

                .sidebar .logout-link:hover {
                    background-color: #555;
                    color: #fdc500;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .navbar {
            display: none;
        }

        .sidebar img {
            max-width: 80%;
            margin-top: -20px;
            margin: 0 auto 15px auto;
        }
        .sidebar hr {
            width: 230px;
            border: 1px solid white;
            margin-bottom: 15px;
            margin: 0 auto 15px auto;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <img class="Logo mb-1" src="~/Images/dnts.png" alt="Small Logo" />
        <hr />
        <a href="@Url.Action("Index", "TALaboratory")">Home</a>

        <div class="user-info">
            <span style="color: white;"><i class="fas fa-user"></i> @Context.Session.GetString("FullName")</span> /
            <span><i class="fas fa-user-tag"></i> @Context.Session.GetString("Role")</span>
       

        <a href="@Url.Action("Logout", "Account")" class="logout-link">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
         </div>
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
