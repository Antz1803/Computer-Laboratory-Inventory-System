@model DNTS_CLIS.Models.User

@{
    Layout = "~/Views/Shared/_LayoutSupervisor.cshtml";
    ViewData["Title"] = "Delete";
}

<style>
    html, body {
        height: 100%;
    }

    .delete-wrapper {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top:-35px;
    }

    .card {
        width: 100%;
        max-width: 700px;
    }

    .form-label-bold {
        font-weight: 600;
    }

    .value-text {
        margin-bottom: 0.5rem;
    }
</style>

<div class="container-fluid delete-wrapper">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white text-center rounded-top-4">
            <h3 class="mb-0 fw-bold">Confirm Delete</h3>
        </div>
        <div class="card-body p-4">
            <h5 class="text-center text-muted mb-4">Are you sure you want to delete this user?</h5>

            <div class="d-flex" style="margin-left:200px;">
                <div class="row" style="max-width: 500px; width: 100%;">
                    <div class="col-sm-4 form-label-bold">First Name:</div>
                    <div class="col-sm-8 value-text">@Model.FirstName</div>

                    <div class="col-sm-4 form-label-bold">Last Name:</div>
                    <div class="col-sm-8 value-text">@Model.LastName</div>

                    <div class="col-sm-4 form-label-bold">Email:</div>
                    <div class="col-sm-8 value-text">@Model.Email</div>

                    <div class="col-sm-4 form-label-bold">Username:</div>
                    <div class="col-sm-8 value-text">@Model.Username</div>

                    <div class="col-sm-4 form-label-bold">Role:</div>
                    <div class="col-sm-8 value-text">@Model.Role</div>

                    <div class="col-sm-4 form-label-bold">Laboratory:</div>
                    <div class="col-sm-8 value-text">@Model.AssignLaboratory</div>

                    <div class="col-sm-4 form-label-bold">Password:</div>
                    <div class="col-sm-8 value-text">@Model.Password</div>
                </div>
            </div>
            <br/>
            <form asp-action="Delete">
                <input type="hidden" asp-for="UserId" />

                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-outline-danger px-4">Delete</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
