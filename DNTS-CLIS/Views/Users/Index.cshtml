@model IEnumerable<DNTS_CLIS.Models.User>

@{
    Layout = "~/Views/Shared/_LayoutSupervisor.cshtml";
    ViewData["Title"] = "Index";
}

<div class="container-fluid mt-4" style="width:1250px;margin-left:-70px;">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0" style="font-weight: bold;">USERS</h2>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-end mb-3">
                <a asp-action="Create" class="btn btn-success">Create New</a>
            </div>
            <button type="button" class="btn btn-secondary ms-0 t-2" data-bs-toggle="modal" data-bs-target="#inactiveUsersModal">
                Archive
            </button>
       
            <div class="table-responsive">
                <br/>
                <table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="width:120px;">
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignLaboratory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
 @foreach (var item in Model.Where(u => u.Status == "Active"))
                        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignLaboratory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td style="width:250px;">
                                    <a asp-action="Edit" asp-route-id="@item.UserId"><img src="~/Images/edit.svg" width="29" height="auto" /></a> |
                                    <a asp-action="Details" asp-route-id="@item.UserId"><img src="~/Images/details.svg" width="29" height="auto" /></a> |
                                    <a asp-action="Delete" asp-route-id="@item.UserId"><img src="~/Images/trash.svg" width="29" height="auto" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
    </div>
</div>
<!-- Inactive Users Modal -->
<div class="modal fade" id="inactiveUsersModal" tabindex="-1" aria-labelledby="inactiveUsersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content" style="border-radius:10px;">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="inactiveUsersModalLabel">Inactive Users</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped text-center">
                        <thead class="table-secondary">
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Birth Date</th>
                                <th>Age</th>
                                <th>Status</th>
                                <th>Username</th>
                                <th>Role</th>
                                <th>Laboratory</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Where(u => u.Status == "Inactive"))
                            {
                                <tr>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.Email</td>
                                    <td>@item.BirthDate</td>
                                    <td>@item.Age</td>
                                    <td>@item.Status</td>
                                    <td>@item.Username</td>
                                    <td>@item.Role</td>
                                    <td>@item.AssignLaboratory</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .table thead th {
        background-color: #d1e7dd;
        border-bottom: 1px solid black;
        color: black;
    }

</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
