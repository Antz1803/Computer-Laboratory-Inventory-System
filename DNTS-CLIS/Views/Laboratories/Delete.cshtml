@model DNTS_CLIS.Models.Laboratories

@{
    Layout = "~/Views/Shared/_LayoutSupervisor.cshtml";
    ViewData["Title"] = "Delete";
}

<div class="container mt-4 d-flex justify-content-center">
    <div class="card shadow-lg border-danger" style="width: 55%;">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">⚠ Confirm Deletion</h3>
        </div>
        <div class="card-body text-center">
            <p class="text-danger fw-bold">
                Are you sure you want to delete this record? This action cannot be undone.
            </p>
            <hr />

            <div class="table-responsive">
                <table class="table table-bordered border-dark custom-border" style="width: 70%; margin: auto;">
                    <thead class="bg-danger text-white">
                        <tr style="border-bottom-color:black;">
                            <th class="text-center">Field</th>
                            <th class="text-center">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="fw-bold text-start bg-light">Laboratory Name:</td>
                            <td class="text-start">@Html.DisplayFor(model => model.LaboratoryName)</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-start bg-light">Created Date:</td>
                            <td class="text-start">@Html.DisplayFor(model => model.CreatedDate)</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">🗑 Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">⬅ Back to List</a>
            </form>
        </div>
    </div>
</div>
<style>
        .custom-border th,
        .custom-border td,{
            border: 2px solid black;
        }

</style>

