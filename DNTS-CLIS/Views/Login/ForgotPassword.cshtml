@model DNTS_CLIS.Controllers.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Forgot Password";
}

<style>
    body {
        background-color: #a3cef1;
        min-height: 100vh;
        overflow-x: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .glass-card {
        background: rgba(2, 123, 206, 0.3);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
        padding: 30px;
        width: 100%;
        max-width: 450px;
        margin-top: 20px;
    }

        .glass-card .form-label {
            color: #fff;
        }

        .glass-card .form-control {
            background-color: rgba(255, 255, 255, 0.5);
            color: #000;
            border: none;
            border-radius: 5px;
            padding: 10px;
        }

            .glass-card .form-control:focus {
                box-shadow: 0 0 5px rgba(2, 123, 206, 0.5);
            }

        .glass-card .btn-primary {
            background-color: #027bce;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            color: #fff;
            transition: background-color 0.3s ease;
        }

            .glass-card .btn-primary:hover {
                background-color: #0168b7;
            }

        .glass-card .btn-secondary {
            background-color: #6c757d;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            color: #fff;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s ease;
        }

            .glass-card .btn-secondary:hover {
                background-color: #545b62;
            }

    .Logo {
        width: 100px;
        height: auto;
    }

    .toast-container {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 9999;
    }
</style>

<div class="container text-center">
    <!-- Logo Header -->
    <div class="mb-3">
        <img src="~/Images/dnts-act.png" alt="DNTS Logo" style="width:530px;" />
    </div>

    <!-- Forgot Password Form -->
    <div class="glass-card mx-auto">
        <div class="text-center mb-3">
            <img class="Logo mb-2" src="~/Images/dnts.png" alt="Small Logo" />
            <h4 class="text-white mb-2">Forgot Password</h4>
            <p class="text-white mb-4">Enter your username and email to receive a temporary password.</p>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @ViewBag.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle-fill me-2"></i>
                @ViewBag.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="None" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 mt-3">
                <button type="submit" class="btn btn-primary">Send Temporary Password</button>
                <a asp-action="Index" class="btn btn-secondary">Back to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
