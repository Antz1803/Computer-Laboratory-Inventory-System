@model DNTS_CLIS.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Login";
}
<style>
    body {
        background-image: url('/images/login-background.png');
        background-repeat: no-repeat;
        background-size: cover;
        height: 100vh;
        overflow: hidden;
        background-color: #a3cef1;
    }

    .glass-card {
        background: rgba(2, 123, 206, 0.3); 
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1); 
        padding: 20px;
    }

        .glass-card .form-label {
            color: #fff;
        }

        .glass-card .form-control {
            background-color: rgba(255, 255, 255, 0.5); 
            color: #000; 
            border: none;
            border-radius: 5px;
            padding: 10px;
        }

            .glass-card .form-control:focus {
                box-shadow: 0 0 5px rgba(2, 123, 206, 0.5); 
            }

        .glass-card .btn-primary {
            background-color: #027bce;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            color: #fff; 
        }

            .glass-card .btn-primary:hover {
                background-color: #0168b7; 
            }
            .Logo{
                width:100px;
                height:auto;
            }

    .header-container {
        margin-bottom: -25px;
        margin-top:20px;
    }
</style>
    <div class="d-flex flex-column align-items-center justify-content-center container-fluid" style="height: 100vh;">
    <div class="header-container">
        <img src="~/Images/dnts-act.png" width="610" height="auto" alt="DNTS Logo" />
    </div>
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card glass-card shadow-lg" style="width: 400px;">
        <div class="text-center">
            <h3><img class="Logo" src="~/Images/dnts.png"/></h3>
            <p class="text-white">Sign in to continue</p>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @ViewBag.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form asp-action="Index" method="post">
            <div asp-validation-summary="None" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
                <div class="d-grid align-items-center justify-content-center">
                <button type="submit" class="btn btn-primary" style="width:100px;">Login</button>
            </div>
        </form>
    </div>
</div>
</div>
<!-- Toast Notification for Error -->
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
        <div id="loginToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-danger text-white">
                <i class="bi bi-exclamation-circle-fill me-2"></i>
                <strong class="me-auto">Authentication Error</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @ViewBag.ErrorMessage
            </div>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var toastEl = document.getElementById('loginToast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl, {
                    autohide: true,
                    delay: 5000
                });
                toast.show();
            }
        });
    </script>
}
